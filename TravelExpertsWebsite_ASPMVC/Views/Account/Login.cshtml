@model TravelExpertsWebsite_ASPMVC.Models.Login
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
<h3>@ViewBag.Error</h3>



<div class="container">
    <div class="row">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "register container" }))
        {
            @Html.AntiForgeryToken()

            <div class="row no-gutters">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="col-md-6 col-sm-8 offset-md-3 offset-sm-2 text-center" id="bounds1">
                    <fieldset>
                        <div class="input-group">
                            @Html.LabelFor(m => m.userAccount)

                            <div class="input-group-prepend">
                                <span class="lnr lnr-user input-group-text"></span>
                            </div>
                            @Html.EditorFor(m => m.userAccount, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.userAccount, "", new { @class = "text-danger" })


                        </div>

                        <div class="input-group">

                            @Html.LabelFor(m => m.userPassword)
                            <div class="input-group-prepend">
                                <span class="lnr lnr-lock input-group-text"></span>
                            </div>
                            @Html.EditorFor(m => m.userPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.userPassword, "", new { @class = "text-danger" })

                        </div>



                    </fieldset>

                    <div class="form-row button-row submit text-center">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Login" class="btn btn-info col" />
                        </div>
                    </div>


                    <fieldset>
                        <legend>~or~<br>New to Travel Experts?</legend>

                        <!-- Buttons -->
                        <div class="form-row button-row submit">
                            <a href="@Url.Action("RegisterCustomer", "Account")" class="btn btn-info wide">
                                Register
                            </a>
                        </div>
                    </fieldset>
                </div>
            </div>
        }
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>